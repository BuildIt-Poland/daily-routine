{
  "name": "daily-routine",
  "version": "0.4.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "start:build": "npm run build && serve -s build",
    "test": "react-scripts test",
    "test:update": "npm test -- --watchAll=false --updateSnapshot",
    "test:coverage": "npm test -- --watchAll=false --coverage",
    "e2e:dev": "node -e 'require(\"./src/e2eConfig\").e2eRunDev(\"http://localhost:3000\")'",
    "e2e": "PUBLIC_URL=http://localhost:3000 npm run build && node -e 'require(\"./src/e2eConfig\").e2eRun(\"3000\")'",
    "eject": "react-scripts eject",
    "lint": "eslint \"src/**/*.js\"",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --list-different \"src/**/*.js\"",
    "deploy": "node ./deploy.js"
  },
  "dependencies": {
    "lodash.sample": "4.2.1",
    "react": "16.8.6",
    "react-copy-to-clipboard": "5.0.1",
    "react-dom": "16.8.6",
    "react-measure": "2.3.0",
    "react-router-dom": "5.0.1",
    "react-scripts": "3.0.1",
    "react-spring": "8.0.25",
    "styled-components": "4.3.1"
  },
  "devDependencies": {
    "@testing-library/react": "8.0.1",
    "@testing-library/react-hooks": "1.1.0",
    "check-dependencies": "1.1.0",
    "cypress": "3.4.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-plugin-import": "2.17.3",
    "gh-pages": "2.0.1",
    "husky": "2.4.0",
    "jest-dom": "3.5.0",
    "jest-styled-components": "6.3.1",
    "lint-staged": "8.2.0",
    "prettier": "1.18.0",
    "prop-types": "15.7.2",
    "react-test-renderer": "16.8.6",
    "serve": "11.0.1",
    "serve-handler": "6.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:import/errors",
      "plugin:import/warnings",
      "prettier"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "_",
          "argsIgnorePattern": "_"
        }
      ],
      "no-console": [
        "error"
      ],
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ]
        }
      ],
      "react/prop-types": 2
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 120
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/e2eConfig.js",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/setupTests.js",
      "!src/constants/**/*",
      "!src/components/Root/**/*",
      "!src/components/**/index.js",
      "!src/components/GlobalStyle/**/*",
      "!src/quotes/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
