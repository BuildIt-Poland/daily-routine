{
  "name": "daily-routine",
  "version": "1.0.0-beta.1",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "start:build": "npm run build && serve -s build",
    "test": "react-scripts test",
    "test:update": "npm test -- --watchAll=false --updateSnapshot",
    "test:ci": "npm test -- --watchAll=false --coverage --runInBand --no-cache",
    "e2e:dev": "npm run cypress:dev & npm start",
    "e2e": "npm run cypress & npm start",
    "cypress:dev": "npm run wait-on-server && cypress open",
    "cypress": "npm run wait-on-server && cypress run",
    "wait-on-server": "wait-on http://localhost:3000",
    "eject": "react-scripts eject",
    "lint": "eslint \"src/**/*.js\"",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --list-different \"src/**/*.js\"",
    "deploy": "node ./deploy.js"
  },
  "dependencies": {
    "body-scroll-lock": "2.6.4",
    "focus-visible": "5.0.2",
    "lodash.includes": "4.3.0",
    "lodash.isempty": "4.4.0",
    "lodash.isequal": "4.5.0",
    "lodash.partialright": "4.2.1",
    "lodash.sample": "4.2.1",
    "lodash.truncate": "4.4.2",
    "lodash.unzip": "3.4.0",
    "mod-op": "1.0.1",
    "react": "16.9.0",
    "react-copy-to-clipboard": "5.0.1",
    "react-dom": "16.9.0",
    "react-focus-lock": "2.0.4",
    "react-router-dom": "5.0.1",
    "react-scripts": "3.0.1",
    "react-spring": "8.0.27",
    "styled-components": "4.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.0.0",
    "@testing-library/react": "8.0.1",
    "@testing-library/react-hooks": "1.1.0",
    "check-dependencies": "1.1.0",
    "cypress": "3.4.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-import": "2.18.2",
    "husky": "2.4.0",
    "jest-styled-components": "6.3.3",
    "lint-staged": "8.2.0",
    "prettier": "1.18.2",
    "prop-types": "15.7.2",
    "react-test-renderer": "16.8.6",
    "serve": "11.1.0",
    "serve-handler": "6.1.0",
    "wait-on": "3.3.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:import/errors",
      "plugin:import/warnings",
      "prettier"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "_",
          "argsIgnorePattern": "_"
        }
      ],
      "no-console": [
        "error"
      ],
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ]
        }
      ],
      "react/prop-types": 2
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 120
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/setupTests.js",
      "!src/constants/**/*",
      "!src/components/Root/**/*",
      "!src/components/**/index.js",
      "!src/components/GlobalStyle/**/*",
      "!src/quotes/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
